#include <iostream>
using namespace std;

#define MAX 100
class Stack
{
    int top;
public:
    int arr[MAX];
    bool push(int a);
    int pop();
    bool isEmpty();
};

bool Stack::push(int a)
{
    if(top>=MAX)
    {
        cout<<"Stack overflow"<<endl;
        return false;
    }
    else
    {
        arr[++top]=a;
        cout<<a<<" pushed into stack"<<endl;
        return true;
    }
}

bool Stack::isEmpty()
{
    return top==-1;
}

int Stack::pop()
{
    if(top==-1)
    {
        cout<<"Stack underflow"<<endl;
        return 0;
    }
    else
    {
        int n=arr[top--];
        return n;
    }
}

int main(int argc, const char * argv[]) {
    // insert code here...
    struct Stack s;
    s.push(10);
    s.push(20);
    s.push(30);
    s.push(40);
    
    cout<<s.pop()<<" was top element of stack"<<endl;
    return 0;
}

